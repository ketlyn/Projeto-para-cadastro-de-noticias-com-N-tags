@model NoticiasMvc.Models.Noticia

@{
    ViewData["Title"] = "Detalhes da Notícia";
}

<h2>Detalhes</h2>
<hr />

<dl class="row">
    <dt class="col-sm-2">Título</dt>
    <dd class="col-sm-10">@Model.Titulo</dd>

    <dt class="col-sm-2">Texto</dt>
    <dd class="col-sm-10">@Model.Texto</dd>

    <dt class="col-sm-2">Usuário</dt>
    <dd class="col-sm-10">@Model.Usuario?.Nome</dd>

    <dt class="col-sm-2">Tags</dt>
    <dd class="col-sm-10">
        @string.Join(", ", (Model.NoticiasTags ?? new List<NoticiasMvc.Models.NoticiaTag>())
            .Where(x => x.Tag != null).Select(x => x.Tag!.Descricao))
    </dd>
</dl>

<div>
    <a class="btn btn-secondary" asp-controller="Noticias" asp-action="Index">Voltar</a>
</div>

@section Scripts {
    <script src="~/js/noticias.js"></script>
}