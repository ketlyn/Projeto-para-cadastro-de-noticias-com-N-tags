@model NoticiasMvc.Models.ViewModels.NoticiaFormViewModel
@{
    var action = (string)(ViewData["FormAction"] ?? "");
}
<div class="card mb-3">
    <div class="card-header">
        @(Model.Id == 0 ? "Criar Notícia" : "Editar Notícia")
    </div>
    <div class="card-body">
        <form id="form-noticia" method="post" action="@action" novalidate>
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Titulo" class="form-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Texto" class="form-label"></label>
                <textarea asp-for="Texto" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Texto" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="UsuarioId" class="form-label">Usuário</label>
                <select asp-for="UsuarioId" asp-items="Model.Usuarios" class="form-select"></select>
                <span asp-validation-for="UsuarioId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">@Html.DisplayNameFor(m => m.SelectedTagIds)</label>
                <div class="row row-cols-2 g-1">
                    @foreach (var item in Model.Tags)
                    {

                        var idVal = int.Parse(item.Value);
                        <div class="col form-check">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="SelectedTagIds"
                                   value="@item.Value"
                            @(Model.SelectedTagIds.Contains(idVal) ? "checked" : null) />
                            <label class="form-check-label">@item.Text</label>
                        </div>
                    }
                </div>
                <span class="text-danger" data-valmsg-for="SelectedTagIds" data-valmsg-replace="true"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Salvar</button>
                <button type="button" class="btn btn-secondary" id="btnCancelarForm">Cancelar</button>
            </div>
        </form>
    </div>
</div>